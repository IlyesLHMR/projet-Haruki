{% extends 'layout-full-width.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

<div class="container">
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	{# ---Ajout---- #}
	{% for flash_error in app.flashes('new_link_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}<a href="{{ path('app_email_link_renew') }}">lien</a></div>
	{% endfor %}
	{# ---Fin Ajout---- #}

	<h1>S'inscrire</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
	{{ form_row(registrationForm.agreeTerms, {
            label: 'RGPD'
        }) }}

	<button type="submit" class="btn btn-primary mb-2">S'incrire !</button>
	{{ form_end(registrationForm) }}
</div>
{% endblock %}
{% extends 'layout-full-width.html.twig' %}

{% block title %}
    Haruki | Création de liste
{% endblock %}

{% block body %}
<div class="first-title bg-primary text-dark py-5">
    <div class="container">
        <h3>Formulaire de création de liste :</h3>
    </div>
</div>

<div class="espacement"></div>

<div class="container custom-form">
    {% if app.request.headers.get('User-Agent') matches '/(mobile)/i' %}

         {{form(form)}}
         <button type="submit" class="btn btn-primary mb-4">Créer la liste</button>
         <p>* Champ obligatoire</p>

    {% else %}

    {{ form_start(form, {'action': path('app_member_createList')}) }}
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_label(form.titre, 'Titre de la liste *:') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="boxed form-group">
                {{ form_label(form.series, 'Séries préférées :') }}
                {{ form_widget(form.series, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="d-flex flex-row">
        <a href="{{ path('app_member_readList') }}" class="btn btn-outline-primary mb-4 me-3">Retour</a>
        <button type="submit" class="btn btn-primary mb-4">Créer la liste</button>
    </div>
    <p>* Champ obligatoire</p>
    {{ form_end(form) }}
</div>
    {% endif %}

{% endblock %}

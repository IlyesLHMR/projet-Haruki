{% extends 'base.html.twig' %}

{% block body %}
 <a href="{{ path('app_article') }}" class="btn btn-primary m-4">Retour</a>
  <div class="container mb-4 mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ article.titre }}</h5>
            <img src="{{ asset('assets/img/article/' ~ article.image) }}" alt="Article" class="card-img-top custom-img-height">
            <p class="card-text">{{ article.contenu|nl2br }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

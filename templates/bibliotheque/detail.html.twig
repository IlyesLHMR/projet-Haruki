{% extends 'base.html.twig' %}

{% block title %}
	Haruki-concept | Manga
{% endblock %}

{% block body %}

<body>
  <section class="series-section">
    <div class="container">
      <h2 class="section-title">{{ series.getNomSerie }}</h2>
      <p class="section-description">{{ series.editeur}}</p>
      <div class="container">
         <p class="section-description">{{ series.descriptif|raw }}</p>
      </div>
  </section>


{% if app.request.headers.get('User-Agent') matches '/(mobile)/i' %}
  <div> 
    <div class="slider slide-show" data-slick='{"slidesToShow": 2, "slidesToScroll": 1}'>
      {% for manga in mangas %}
        <div class="mb-4">
          <img src="{{ asset('assets/img/uploaded/' ~ manga.image_cover) }}" alt="" class="card-img-top slick-img">
            <div class="card-body d-flex justify-content-center">
              <p class="card-text">Tome {{ manga.numeroTome }}</p>
            </div>
        </div>      
      {% endfor %}
    </div>
  </div>

{% elseif app.request.headers.get('User-Agent') matches '/(tablet|ipad|playbook)|(android(?!.*mobile))/i' %}
  <div> 
    <div class="slider slide-show" data-slick='{"slidesToShow": 3, "slidesToScroll": 1}'>
      {% for manga in mangas %}
        <div class="mb-4">
          <img src="{{ asset('assets/img/uploaded/' ~ manga.image_cover) }}" alt="" class="card-img-top slick-img">
            <div class="card-body d-flex justify-content-center">
              <p class="card-text">Tome {{ manga.numeroTome }}</p>
            </div>
        </div>      
      {% endfor %}
    </div>
  </div>

{% else %}
  <div> 
    <div class="slider slide-show" data-slick='{"slidesToShow": 3, "slidesToScroll": 2}'>
      {% for manga in mangas %}
        <div>
          <img src="{{ asset('assets/img/uploaded/' ~ manga.image_cover) }}" alt="" class="card-img-top slick-img-desktop">
            <div class="card-body d-flex justify-content-center">
              <p class="card-text">Tome {{ manga.numeroTome }}</p>
            </div>
        </div>      
      {% endfor %}
    </div>
  </div>
{% endif %}


</body>  
    <script>
          $('.slide-show').slick({
   arrows: true, 
   dots: true,
 });
    </script>

			
{% endblock %}
